<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>同学通讯录</title>
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <link href="http://cdn.bootcss.com/weui/0.4.2/style/weui.css" rel="stylesheet">
  <style>
  *{
    margin: 0;
    padding: 0;
  }
    html,body{
        height:100%;

    }
  body{
    background-color: #fbf9fe;
    line-height: 1.6;
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  }

  .container{
    height: 100%;
    overflow-y: auto;
  }

  .container>div {
    background-color: #fbf9fe;
  }

  .hd{
    padding: 2em 0px;
  }

  .page-title{
    text-align: center;
    font-size: 34px;
    font-weight: 400;
    margin: 0 15%;
    color:#225fba;
  }

  .cell .bd{
    padding-bottom: 30px;
  }
  </style>

</head>
<body>
  <div class="container">
    <div class="cell">
      <div class="hd">
        <h1 class="page-title">通讯录</h1>
      </div>
      <div class="bd">
          <div class="weui_cells weui_cells_access">
          <!-- <a class="weui_cell" href="javascript:void(0);">
              <div class="weui_cell_bd weui_cell_primary">
                  <p>樊嵩渊</p>
              </div>

          </a> -->
            <a class="weui_cell" href="javascript:;" data-name="李茂祺" data-telephone="17687918019">
                <div class="weui_cell_bd weui_cell_primary">
                    <p>李茂祺</p>
                </div>
                <div class="weui_cell_ft">17687918019</div>
            </a>
            <a class="weui_cell" href="javascript:;" data-name="方宝全" data-telephone="15180100462">
                <div class="weui_cell_bd weui_cell_primary">
                    <p>方宝全</p>
                </div>
                <div class="weui_cell_ft">15180100462</div>
            </a>
        </div>
      </div>
    </div>
  </div>

  <div id="actionSheet_wrap">
    <div class="weui_mask_transition" id="mask" style="display: none;"></div>
    <div class="weui_actionsheet" id="weui_actionsheet">
        <div class="weui_actionsheet_menu">
            <div class="weui_actionsheet_cell">拨打<a id="tel_a"></a></div>
            <div class="weui_actionsheet_cell"><a href="" id="detail_a">查看详情</a></div>
        </div>
        <div class="weui_actionsheet_action">
            <div class="weui_actionsheet_cell" id="actionsheet_cancel">取消</div>
        </div>
    </div>
</div>
<script src="http://weui.github.io/weui/zepto.min.js"></script>
<script>
    $('.bd .weui_cell').click(function() {
        var telephone = $(this).data('telephone');
        $('#tel_a').attr('href','tel://' + telephone).html(telephone);
        $('#detail_a').attr('href','/member/detail/' + telephone);
        $('#mask').show().addClass('weui_fade_toggle');
        $('.weui_actionsheet').addClass('weui_actionsheet_toggle');
    });

    $('#actionsheet_cancel,#mask').click(function() {
        $('#mask').hide().removeClass('weui_fade_toggle');
        $('.weui_actionsheet').removeClass('weui_actionsheet_toggle');
    });
</script>
</body>
</html>
